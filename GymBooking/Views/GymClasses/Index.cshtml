@*@model IEnumerable<GymBooking.Models.GymClass>*@
@model IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole("Admin"))
{
    @*<p>Hello Admin! As a logged in admin you have the ability to perform the following actions:</p>
    <p><a asp-action="Create">Create New</a></p>*@

    <p id="createGymClassForm">
        <a asp-action="Create" data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#createGymClassForm">
            Create New Class
        </a>
    </p>

    @*<p>
        <a asp-action="Create">Create New Returns the standard Index View not the partial</a>
    </p>*@

}

@if (User.IsInRole("Member"))
{
    <form asp-action="Index">
        <div class="form-group row">
            <div class="col-sm-2">History</div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="History" id="history" />
                </div>
            </div>
        </div>
    </form>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GymClasses.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClasses.First().StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClasses.First().Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClasses.First().Description)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody id="gymClassesUpdate">
        <partial name="GymClassesPartial" />
    </tbody>
</table>
